<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_acercade"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialogacercade"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgv_upv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_upv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <ImageView
        android:id="@+id/imgv_txurdinaga"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/img_txurdinaga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/txtv_titleidea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ideaoriginal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/txtv_titledesarrollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equipodesarrollo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655" />

    <TextView
        android:id="@+id/txtv_nombresidea"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nekane Aristondo Casado
                      Joane Durán Ibañez
                      Eider Gallastegui Aguirrebeitia
                      Maddi Güemes Miner
                      Andrea Ibargüen Arce"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <TextView
        android:id="@+id/txtv_nombredesarrollo"
        android:layout_width="137dp"
        android:layout_height="69dp"
        android:text="Julen Armaolea                       Endika Mimenza                      Galder Gomez                      Luis                  "
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761" />


</androidx.constraintlayout.widget.ConstraintLayout>