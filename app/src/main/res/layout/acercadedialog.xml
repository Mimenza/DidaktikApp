<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_acercade"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialogacercade"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgv_upv"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/img_upv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <ImageView
        android:id="@+id/imgv_txurdinaga"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_txurdinaga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toEndOf="@+id/imgv_upv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <TextView
        android:id="@+id/txtv_titleidea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ideaoriginal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgv_upv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtv_titledesarrollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equipodesarrollo"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_nombresidea"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/txtv_nombresidea"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=" Nekane Aristondo Casado \n Joane Durán Ibañez \n Eider Gallastegui Aguirrebeitia \n Maddi Güemes Miner \n Andrea Ibargüen Arce"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_titleidea"
        app:layout_constraintVertical_bias="0.035" />

    <TextView
        android:id="@+id/txtv_nombredesarrollo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=" Julen Armaolea Elexgaray \n Endika Mimenza Lobato \n Galder Gomez Goikuria \n Luis Villaroel Vaga"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_titledesarrollo"
        app:layout_constraintVertical_bias="0.125" />


</androidx.constraintlayout.widget.ConstraintLayout>